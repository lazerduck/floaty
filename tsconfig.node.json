{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    // include node types so imports like `node:url` resolve during type-checking
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts"]
}
